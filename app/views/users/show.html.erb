<%= render 'userinfo', user: @user %>

<% @books.each do |book| %>
<p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title</p>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <p>Opinion</p>
  <span><%= book.body %></span>
  
<% end %>
